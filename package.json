{
  "name": "meteor-app",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "test-app": "TEST_WATCH=1 meteor test --full-app --driver-package meteortesting:mocha",
    "testcafe": "WEB_PORT=3080 MONGO_PORT=3081 testcafe chrome testcafe/*.testcafe.js --live",
    "testcafe-app": "meteor --port=3080 --settings ../meteor_settings/mc-settings-testcafe.json",
    "unit-test": "meteor --port=3070 test --driver-package meteortesting:mocha | awk '{ sub(/^I.*\\? /, \"\"); print }'",
    "visualize": "meteor --production --extra-packages bundle-visualizer"
  },
  "dependencies": {
    "@babel/runtime": "^7.20.7",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^6.3.1",
    "@mui/material": "^6.3.1",
    "chai": "^5.1.2",
    "meteor-node-stubs": "^1.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "simpl-schema": "^3.4.6",
    "underscore": "^1.13.7"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.jsx",
      "server": "server/index.js"
    }
  },
  "devDependencies": {
    "puppeteer": "^24.0.0",
    "puppeteer-core": "^24.0.0"
  }
}
